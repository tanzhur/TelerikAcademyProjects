@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Minotaur Team Collaboration </title>
    @Styles.Render("~/Styles/css")
    @Styles.Render("~/Styles/kendo")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Minotaur", "Index", new { area = "", controller = "Plans" }, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav" id="MainMenu">
                        <li>@Html.ActionLink("Plans", "Index", new { area = "", controller = "Plans" })</li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("My Profile", "Index", new { area = "", controller = "Users" })</li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                Admin
                                <ul>
                                    <li>@Html.ActionLink("Users", "Index", new { area = "Adminstration", controller = "Users" })</li>
                                    <li>@Html.ActionLink("Plans", "Index", new { area = "Adminstration", controller = "Plans" })</li>
                                    <li>@Html.ActionLink("Todos", "Index", new { area = "Adminstration", controller = "Todoes" })</li>
                                </ul>
                            </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Masonry.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        $("#MainMenu").kendoMenu();
    </script>
</body>
</html>
